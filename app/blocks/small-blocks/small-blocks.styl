.section
	// заголовки секций
	&__title
		text-align center
		color endeavour
		font-size 19px
		text-transform: uppercase
		font-weight bold
		letter-spacing 1.87px
		padding-top 53px
	// ссылки секций
	&__link
		text-align center
		color endeavour
		font-size 20px
		font-weight 500
		display: block
		width 300px
		margin: 0 auto
		text-decoration none
		padding-bottom 50px
		transition 300ms all linear
		&:after
			content: "";
			display: inline-block;
			position: relative
			right 5px
			top 1px
			width: 9px;
			height: 9px;
			border-top: 2px solid #013e9b;
			border-right: 2px solid #013e9b;
			-webkit-transform: rotate(45deg);
			-ms-transform: rotate(45deg);
			transform: rotate(45deg);
			margin-bottom: 1px;
			transition 200ms all linear
		&:hover
			&:after
				transform: translate(4px)rotate(45deg);